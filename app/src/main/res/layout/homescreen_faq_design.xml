<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/rounded_corner_white"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:orientation="horizontal">

            <TextView
                style="@style/poppinsMediumText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="What is Mera Form?"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <ImageView
                android:id="@+id/imgDownArrow"
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/down_arrow" />

            <ImageView
                android:id="@+id/imgUpArrow"
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/up_arrow"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/tvAns"
                style="@style/poppinsRegularText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Mera Form is an online platform designed to streamline the process of filling out and submitting various form. It simplifies form management for individuals and organizations by offering a user-friendly interface and secure submission options."
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>