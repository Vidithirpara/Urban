<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp"
        android:background="@drawable/rounded_corner_white"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLatestNews"
                    style="@style/ralewayBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LatestNews"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <View
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/orange" />

            </LinearLayout>

            <TextView
                style="@style/poppinsMediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="January 1, 2024"
                android:textColor="@color/gray2"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>

        <TextView
            style="@style/poppinsMediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="Climate Change Mitigation Act"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <TextView
            style="@style/poppinsRegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="This act aims to reduce greenhouse gas emissions by 40% by 2030 through stricter regulations."
            android:textColor="@color/gray2"
            android:textSize="@dimen/_9ssp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                style="@style/poppinsMediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Service"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/next_arrow" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>